<% if @user %>
  <h1><%= @user.name %>'s Galleries</h1>
<% else %>
  <h1>All Galleries</h1>
<% end %>

<table>
  <tr>
    <th>Gallery Name</th>
    <th>Owner</th>
  <tr>
  <% @galleries.each do |gallery| %>
    <tr>
      <td><%= gallery.name %></td>
      <td><%= gallery.user.name %></td>
      <td><%= link_to 'Show', gallery_path(gallery) %>
    </tr>
  <% end %>
</table>