<h1>Show Gallery Page</h1>
<h2>Name: <%= @gallery.name %></h2>
<h3>Owner: <%= @gallery.user.name %></h3>

<h4>Paintings</h4>

<table>
  <tr>
    <th>Title</th>
    <th>Artist</th>
    <th>Country</th>
  </tr>
  <% @gallery.paintings.each do |painting| %>
    <tr>
      <td><%= painting.title %></td>
      <td><%= painting.artist_name %></td>
      <td><%= painting.country %></td>
      <td><%= link_to "Show", painting_path(painting) %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Create a new painting", new_gallery_painting_path(@gallery) if @gallery.user == current_user %></p>
<p><%= link_to "Edit gallery", edit_gallery_path(@gallery) if @gallery.user == current_user %></p>
<p><%= link_to 'Destroy', gallery_path(@gallery), method: :delete if current_user == @gallery.user%></p>
